@model getAPIstuff.Api.ApiCall

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Do API call</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Vm22" asp-action="CreateApiCall" method="post">
                    <div class="mb-3">
                        <label class="form-label">Liga (ID)</label>
                        <input type="text" class="form-control" value="690408" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Lagnamn (ID)</label>
                        <input type="text" class="form-control" value="844" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dato (yyyy-mm-dd)</label>
                        <input type="datetime-local" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary" role="button">Do API call</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <p>This is just the footer. Some info might come here</p>
            </div>
        </div>
    </div>
</div></>