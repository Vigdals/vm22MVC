@{
}
<h1>VM22 - Resultatservice kjem snart!</h1>
<table class="table">
    <tr>
        <th>
            Heimelag
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AwayScore)
        </th>
        <th>
            Bortelag
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attendance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stadium)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeam)
                <img class="smallImage" src="@item.HomeTeamLogo" width="24" height="24" alt="@item.HomeTeamLogo" />
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.HomeScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayScore)
            </td>
            <td>
                <img class="teamImage" src="@item.AwayTeamLogo" width="24" height="24" alt="@item.AwayTeamLogo"/>
                @Html.DisplayFor(modelItem => item.AwayTeam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attendance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stadium)
            </td>
        
        </tr>
    }
</table>

<div>
    <button asp-controller="vm22" asp-action="Create" asp-for="stageid" value="683902" type="submit" class="btn btn-primary" role="button">Neste Gruppe</button>
</div>