@using System.ComponentModel.DataAnnotations.Schema
@using System.Diagnostics
@using System.Security.Cryptography.X509Certificates
@using getAPIstuff.Models
@model TournamentModel

<form asp-action="Index" asp-for="groupName">
    <label for="groupName">Velg gruppe</label>
    <select name="groupName" id="groupName">
        <option value="Gruppe A">A</option>
        <option value="Gruppe B">B</option>
        <option value="Gruppe C">C</option>
        <option value="Gruppe D">D</option>
        <option value="Gruppe E">E</option>
        <option value="Gruppe F">F</option>
        <option value="Gruppe G">G</option>
        <option value="Gruppe H">H</option>
        <option value="Sluttspill">Sluttspel</option>
    </select>
    <br/><br/>
    <input type="submit" value="Hent gruppe">
</form>

<form asp-action="Submit" method="post">
    <table class="table" style="width:100%">
        <tr>
            <th style="width:20%">
                Tid
            </th>
            <th style="width:15%">
                Heimelag
            </th>
            <th>
                H
            </th>
            <th>
                U
            </th>
            <th>
                B
            </th>
            <th style="width:15%">
                Bortelag
            </th>
        </tr>
        @for (int i = 0; i < Model.kampModels.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.kampModels[i].TimeStamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.kampModels[i].HomeTeam)
                    <img class="smallImage" src="@Model.kampModels[i].HomeTeamLogo" width="24" height="24" />
                </td>
                <td>
                    <input id="home" type="radio" name="answer-@Model.kampModels[i].HomeTeam @Model.kampModels[i].AwayTeam" value="home" asp-for="@Model.TippeModel[i].Hjemme" />
                </td>
                <td>
                    <input id="tie" type="radio" name="answer-@Model.kampModels[i].HomeTeam @Model.kampModels[i].AwayTeam" value="tie" asp-for="@Model.TippeModel[i].Uavgjort" />
                </td>
                <td>
                    <input id="away" type="radio" name="answer-@Model.kampModels[i].HomeTeam @Model.kampModels[i].AwayTeam" value="away" asp-for="@Model.TippeModel[i].Borte" />

                </td>
                <td>
                    <img class="teamImage" src="@Model.kampModels[i].AwayTeamLogo" width="24" height="24" />
                    @Html.DisplayFor(modelItem => Model.kampModels[i].AwayTeam)
                </td>
            </tr>
        }
    </table>
    <input type="submit" value="Send tipping for @Model.groupName">
    @{Debug.WriteLine("TEST ASDASD "+Model);}
</form>